{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <div class="post">
        <p>{{ post.content }}</p>
        <p>Posté par {{ post.user.username }} le {{ post.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <a href="{{ path('app_post_index') }}">Retour à la liste</a>

    {% if app.user == post.user %}
        <a href="{{ path('app_post_edit', {'id': post.id}) }}">Éditer</a>

        {{ include('post/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}